        android:key="CA"
        android:title="Classe d'armure du personnage">
        <Preference android:layout="@layout/divider_pref" android:selectable="false"/>
        <stellarnear.aquene_dealer.Divers.EditTextPreference
            android:defaultValue="@integer/ability_ca_stuff_def"
