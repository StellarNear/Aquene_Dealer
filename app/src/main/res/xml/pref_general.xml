            android:inputType="number"
            android:summary="Valeur : %s"/>
    </PreferenceCategory>
    <Preference android:layout="@layout/divider_pref" android:selectable="false"/>
    <PreferenceCategory
        android:key="SAVE"
        android:title="Jets de sauvegarde">
        <Preference android:layout="@layout/divider_pref" android:selectable="false"/>
        <SwitchPreference
            android:defaultValue="@bool/switch_save_race_DEF"
            android:key="switch_save_race"
            android:title="Bonus racial +1 (halfelin)" />
        <SwitchPreference
            android:defaultValue="@bool/switch_save_coat_DEF"
            android:key="switch_save_coat"
            android:title="Cape de résistances draconique +5" />
        <SwitchPreference
            android:defaultValue="@bool/switch_perma_resi_DEF"
            android:key="switch_perma_resi"
            android:title="Permanence résistance +1" />


    </PreferenceCategory>
    <Preference android:layout="@layout/divider_pref" android:selectable="false"/>
    <PreferenceCategory
        android:key="REF"
        android:title="Jets de réflexe">
        <Preference android:layout="@layout/divider_pref" android:selectable="false"/>
        <stellarnear.aquene_dealer.Divers.EditTextPreference
            android:defaultValue="@integer/ability_ref_def"
            android:key="ability_ref"
            android:title="Bonus de base"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:inputType="number"
            android:summary="Valeur : %s"/>

        <SwitchPreference
            android:defaultValue="@bool/switch_save_ref_boot_DEF"
            android:key="switch_save_ref_boot"
            android:title="Bottes de rapidité +1" />
    </PreferenceCategory>
    <Preference android:layout="@layout/divider_pref" android:selectable="false"/>
    <PreferenceCategory
        android:key="VIG"
        android:title="Jets de vigueur">
        <Preference android:layout="@layout/divider_pref" android:selectable="false"/>
        <stellarnear.aquene_dealer.Divers.EditTextPreference
            android:defaultValue="@integer/ability_vig_def"
            android:key="ability_vig"
            android:title="Bonus de base"
            android:selectAllOnFocus="true"
