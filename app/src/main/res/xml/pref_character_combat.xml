<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <stellarnear.aquene_dealer.Divers.EditTextPreference
        android:defaultValue="@integer/attack_range_DEF"
        android:key="attack_range"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="Valeurs : %sm"
        android:inputType="number"
        android:title="Portée des attaques"
        />

    <stellarnear.aquene_dealer.Divers.EditTextPreference
        android:defaultValue="@string/jet_att_DEF"
        android:key="jet_att"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="Valeurs : %s"
        android:title="Jets d'attaque de base (x,x,x)"
        />

    <stellarnear.aquene_dealer.Divers.EditTextPreference
        android:defaultValue="@integer/attack_att_epic_DEF"
        android:key="attack_att_epic"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:inputType="number"
        android:summary="Valeurs : %s"
        android:title="Bonus d'attaque épique"
        />

    <stellarnear.aquene_dealer.Divers.EditTextPreference
        android:defaultValue="@string/jet_att_flurry_DEF"
        android:key="jet_att_flurry"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="Valeurs : %s"
        android:title="Jets d'attaque déluge de coup (x,x,x)"
        />

    <stellarnear.aquene_dealer.Divers.EditTextPreference
        android:defaultValue="@integer/number_main_dice_dmg_DEF"
        android:key="number_main_dice_dmg"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:inputType="number"
        android:summary="Valeurs : %s"
        android:title="Nombre de dès pour les dégats à main nues"
        />

    <stellarnear.aquene_dealer.Divers.EditTextPreference
        android:defaultValue="@integer/main_dice_dmg_type_DEF"
        android:key="main_dice_dmg_type"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:inputType="number"
        android:summary="Valeurs : d%s"
        android:title="Type de dès pour les dégats à main nues"
        />

    <stellarnear.aquene_dealer.Divers.EditTextPreference
        android:defaultValue="@integer/attack_dmg_epic_DEF"
        android:key="attack_dmg_epic"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:inputType="number"
        android:summary="Valeurs : %s"
        android:title="Bonus dégats épique"
        />

    <stellarnear.aquene_dealer.Divers.EditTextPreference
        android:defaultValue="@integer/attack_prouesse_epic_DEF"
        android:key="attack_prouesse_epic"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:inputType="number"
        android:summary="Valeur : %s"
        android:title="Bonus prouesse épique (appliqué à la dernière attaque)" />





</PreferenceScreen>
