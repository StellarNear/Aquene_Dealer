<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:gravity="center"
    android:id="@+id/custom_dialog_RelativeLayoutMain"
    android:background="@drawable/background_border_dialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/margin_abilitydialog_text"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialogabilityTestabilityIcon"
            app:srcCompat="@drawable/mire_test" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_abilitydialog_text"
            android:id="@+id/dialogabilityTestabilityTitle"
            android:gravity="center_horizontal"
            android:text="Test de compétence :"
            android:textColor="@android:color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_abilitydialog_text"
            android:id="@+id/dialogabilityTestabilitySummary"
            android:textSize="16sp"
            android:text="Blabla : maitrise : Abilité +6 : Bonus +8 > 65"
            android:textColor="@color/secondaryTextAbility" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/dialogabilityLinearButtonHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        android:gravity="center">
        <Button
            android:id="@+id/button_ability_test_diceroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_basic_gradient"
            android:textSize="12dp"
            android:text="@string/ability_test_rolldice"/>

        <Button
            android:id="@+id/button_ability_test_passive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/general_margin"
            android:background="@drawable/button_basic_gradient"
            android:textSize="12dp"
            android:text="@string/ability_test_passive"/>
        <Button
            android:id="@+id/button_ability_test_focus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_basic_gradient"
            android:textSize="12dp"
            android:text="@string/ability_test_focus"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="@dimen/icon_dices_wheel_size"
            android:layout_height="@dimen/icon_dices_wheel_size"
            android:id="@+id/dialogabilityTestResultDice"
            android:layout_marginBottom="@dimen/margin_abilitydialog_text" />

        <TextView
            android:id="@+id/dialogabilityTitleResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/general_margin"
            android:text=""
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/dialogabilityTestResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/general_margin"
            android:text=""
            android:textSize="@dimen/sizeTextDialogAbilityResult"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/dialogabilityTestCallToAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/general_margin"
            android:text="Choisis ton action"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black" />
    </LinearLayout>

</RelativeLayout>