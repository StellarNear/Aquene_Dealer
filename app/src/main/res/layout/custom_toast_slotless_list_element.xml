<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/toast_list_element"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/toast_element_gradient"
    android:gravity="center"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/toast_list_element_image"
        android:layout_width="@dimen/stance_icon_tooltip"
        android:layout_height="@dimen/stance_icon_tooltip"
        android:layout_margin="6dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:textAlignment="center">

        <TextView
            android:id="@+id/toast_list_element_textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:textAlignment="center"
            android:layout_marginBottom="3dp"
            android:text="PM is here"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/toast_list_element_textDescr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView1"
            android:layout_gravity="left"
            android:text="This is the demo of Custom Toast Notification"/>
    </LinearLayout>
</LinearLayout>
