<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="stellarnear.aquene_dealer.Activities.MainActivityFragmentCombat">

    <TextView
        android:id="@+id/textCombat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COMBAT!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearCombatFrag"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content"></LinearLayout>

    <ImageButton
        android:id="@+id/button_frag_combat_to_main"
        android:layout_width="@dimen/size_icon_main_actions"
        android:layout_height="@dimen/size_icon_main_actions"
        android:layout_margin="@dimen/general_margin"
        android:adjustViewBounds="true"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/combat_back" />


</android.support.constraint.ConstraintLayout>
