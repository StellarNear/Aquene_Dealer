<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="stellarnear.aquene_dealer.Activities.MainActivityFragmentCombat">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/general_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_icon_main_actions075"
                android:layout_margin="@dimen/general_margin"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="Lancement des compétence" />
            </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/skillTitleLine"
            android:weightSum="6"
            android:orientation="horizontal">

                 <TextView
                     android:id="@+id/skillNameTitle"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="3"
                     android:gravity="center"
                     android:textSize="16sp"
                     android:textStyle="bold"
                     android:text="Compétence" />
                 <TextView
                     android:id="@+id/skillAbiTitle"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:gravity="center"
                     android:textStyle="bold"
                     android:layout_weight="1"
                     android:textSize="16sp"
                     android:background="@color/colorPrimaryDark"
                     android:text="Aptitude" />
                 <TextView
                     android:id="@+id/skillRankTitle"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:gravity="center"
                     android:textSize="16sp"
                     android:layout_weight="1"
                     android:textStyle="bold"
                     android:text="Rang" />
                 <TextView
                     android:id="@+id/skillBonusTitle"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:gravity="center"
                     android:textSize="16sp"
                     android:background="@color/colorPrimaryDark"
                     android:textStyle="bold"
                     android:layout_weight="1"
                     android:text="Autre" />
            </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/skillscrollLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <ImageButton
        tools:ignore="ContentDescription"
        android:id="@+id/button_frag_skill_to_main"
        android:layout_width="@dimen/size_icon_main_actions"
        android:layout_height="@dimen/size_icon_main_actions"
        android:layout_margin="@dimen/general_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/skill_back"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:backgroundTint="@android:color/transparent"/>


</android.support.constraint.ConstraintLayout>
