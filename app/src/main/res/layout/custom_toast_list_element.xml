<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toast_list_element_RelativeLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/toast_element_gradient"
    android:padding="@dimen/general_margin">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toast_list_element"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/toast_list_element_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/general_margin"
            android:adjustViewBounds="true"
            android:maxHeight="@dimen/custom_toast_icon_size"
            android:maxWidth="@dimen/custom_toast_icon_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/toast_list_element_textName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="PM is here"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/toast_list_element_textVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/general_margin"
                android:text="sub title" />

            <TextView
                android:id="@+id/toast_list_element_textDescr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is the demo of Custom Toast Notification" />
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/toast_info_element_trash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_trash_can"
        android:layout_margin="@dimen/general_margin"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/toast_info_element_swap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_back_forth"
        android:layout_margin="@dimen/general_margin"
        android:visibility="gone"/>
</RelativeLayout>
